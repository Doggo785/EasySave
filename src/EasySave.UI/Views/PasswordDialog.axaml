<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="EasySave.UI.Views.PasswordDialog"
        Title="Chiffrement"
        Width="420" Height="220"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1e1e1e" Foreground="White"
        SystemDecorations="BorderOnly">

    <Border Background="#252525" CornerRadius="12" Margin="10" Padding="25">
        <StackPanel Spacing="15">
            <TextBlock x:Name="PromptText" Text="" FontSize="14" TextWrapping="Wrap" Foreground="#ccc"/>
            <TextBox x:Name="PasswordBox" PasswordChar="*" Watermark="Mot de passe..." FontSize="14"/>
            <Grid ColumnDefinitions="*, Auto, Auto" Margin="0,10,0,0">
                <Button Grid.Column="1" x:Name="CancelButton" Content="Annuler" Padding="20,8" Background="#444" Margin="0,0,10,0"/>
                <Button Grid.Column="2" x:Name="ConfirmButton" Content="Confirmer" Padding="20,8" Background="#00bcd4" Foreground="Black"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
