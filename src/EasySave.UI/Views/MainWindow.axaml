<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EasySave.UI.ViewModels"
        xmlns:models="using:EasySave.Core.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="EasySave.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="EasySave V3"
        TransparencyLevelHint="AcrylicBlur"
        Background="#1e1e1e"
        Foreground="White">

    <Design.DataContext><vm:MainWindowViewModel/></Design.DataContext>

    <Window.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#00bcd4"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#00bcd4"/>
        </Style>

        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#aaa"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Padding" Value="20,0"/>
        </Style>
        <Style Selector="TabItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#252525"/>
        </Style>
        <Style Selector="TabItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#00bcd4"/> 
        </Style>
        <Style Selector="TabItem:selected">
            <Setter Property="BorderBrush" Value="#00bcd4"/>
            <Setter Property="BorderThickness" Value="4,0,0,0"/>
        </Style>
    </Window.Styles>

    <TabControl TabStripPlacement="Left" Padding="0">
        
        <TabControl.Template>
            <ControlTemplate TargetType="TabControl">
                <Grid ColumnDefinitions="250, *">
                    <Border Grid.Column="0" Background="#1a1a1a" BorderBrush="#333" BorderThickness="0,0,1,0">
                        <Grid RowDefinitions="Auto, *">
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="25,30,20,40">
                                <Border Background="#00bcd4" CornerRadius="8" Width="45" Height="45">
                                    <TextBlock Text="ES" Foreground="Black" FontWeight="Bold" FontSize="18"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="EasySave" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="v3.0 Pro" FontSize="12" Foreground="#888"/>
                                </StackPanel>
                            </StackPanel>

                            <ItemsPresenter Grid.Row="1" Name="PART_ItemsPresenter" ItemsPanel="{TemplateBinding ItemsPanel}" />
                        </Grid>
                    </Border>

                    <ContentPresenter Grid.Column="1" Name="PART_SelectedContentHost" 
                                      Content="{TemplateBinding SelectedContent}" 
                                      Margin="{TemplateBinding Padding}"/>
                </Grid>
            </ControlTemplate>
        </TabControl.Template>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="ðŸ "/>
                    <TextBlock Text="Accueil"/>
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="30">
                <TextBlock Text="Page d'accueil en construction..." FontSize="24" Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="ðŸ“‚"/>
                    <TextBlock Text="Mes Travaux"/>
                </StackPanel>
            </TabItem.Header>
            
            <Grid Margin="30" RowDefinitions="Auto, *">
                <TextBlock Text="Gestion des Travaux" FontSize="28" FontWeight="Light" Margin="0,0,0,25"/>

                <Border Grid.Row="1" Background="#252525" CornerRadius="12" Padding="20">
                    <Grid RowDefinitions="Auto, *">
                        
                        <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,25">
                            <TextBlock Text="{Binding Jobs.Count, StringFormat='{}{0} travaux configurÃ©s'}" Foreground="#888" VerticalAlignment="Center" FontSize="14"/>
                            <Button Grid.Column="1" Background="#00bcd4" Foreground="Black" Command="{Binding ExecuteAllCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="â–¶"/>
                                    <TextBlock Text="Tout ExÃ©cuter"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid Grid.Row="1" RowDefinitions="Auto, *">
                            <Grid ColumnDefinitions="50, 2*, 2*, 100, 140" Margin="10,0,10,10">
                                <TextBlock Text="ID" FontWeight="Bold" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="NOM" FontWeight="Bold" Foreground="#666"/>
                                <TextBlock Grid.Column="2" Text="CIBLE" FontWeight="Bold" Foreground="#666"/>
                                <TextBlock Grid.Column="3" Text="TYPE" FontWeight="Bold" Foreground="#666"/>
                                <TextBlock Grid.Column="4" Text="ACTIONS" FontWeight="Bold" Foreground="#666" HorizontalAlignment="Center"/>
                            </Grid>
                            
                            <ScrollViewer Grid.Row="1">
                                <ItemsControl ItemsSource="{Binding Jobs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="models:SaveJob">
                                            <Border Background="#2d2d2d" CornerRadius="6" Padding="15,10" Margin="0,0,0,8">
                                                <Grid ColumnDefinitions="50, 2*, 2*, 100, 140">
                                                    
                                                    <TextBlock Text="{Binding Id}" VerticalAlignment="Center" Foreground="#666"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding TargetDirectory}" VerticalAlignment="Center" Foreground="#aaa"/>
                                                    
                                                    <Grid Grid.Column="3" VerticalAlignment="Center">
                                                        <Border Background="#228B22" CornerRadius="4" HorizontalAlignment="Left" Padding="8,4" IsVisible="{Binding SaveType}">
                                                            <TextBlock Text="FULL" FontSize="11" FontWeight="Bold" Foreground="White"/>
                                                        </Border>
                                                        <Border Background="#4682B4" CornerRadius="4" HorizontalAlignment="Left" Padding="8,4" IsVisible="{Binding !SaveType}">
                                                            <TextBlock Text="DIFF" FontSize="11" FontWeight="Bold" Foreground="White"/>
                                                        </Border>
                                                    </Grid>

                                                    <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                                                        <Button Content="â–¶" Padding="10,6" Background="#333" 
                                                                Command="{Binding $parent[Window].DataContext.ExecuteJobCommand}" 
                                                                CommandParameter="{Binding Id}"/>
                                                        
                                                        <Button Content="ðŸ”’" Padding="10,6" Background="#FF8C00" Foreground="White" IsVisible="{Binding SaveType}"/>
                                                        <Button Content="ðŸ”’" Padding="10,6" Background="#333" Opacity="0.5" IsVisible="{Binding !SaveType}"/>

                                                        <Button Content="ðŸ—‘" Padding="10,6" Background="#B22222"
                                                                Command="{Binding $parent[Window].DataContext.DeleteJobCommand}" 
                                                                CommandParameter="{Binding Id}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="âž•"/>
                    <TextBlock Text="Nouveau Travail"/>
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="30" RowDefinitions="Auto, *">
                <TextBlock Text="CrÃ©ation" FontSize="28" FontWeight="Light" Margin="0,0,0,25"/>

                <Border Grid.Row="1" Background="#252525" CornerRadius="12" Padding="40" VerticalAlignment="Top">
                    <StackPanel Spacing="25">
                        <StackPanel>
                            <TextBlock Text="Nom du travail" Foreground="#00bcd4" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding NewName}" Watermark="Entrez un nom unique..."/>
                        </StackPanel>

                        <Grid ColumnDefinitions="*, 20, *">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Dossier Source" Foreground="#aaa" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding NewSource}" Watermark="C:/..."/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Dossier Destination" Foreground="#aaa" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding NewDest}" Watermark="D:/..."/>
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="*, 20, *">
                            <StackPanel>
                                <TextBlock Text="Type de sauvegarde" Foreground="#aaa" Margin="0,0,0,8"/>
                                <ComboBox SelectedIndex="{Binding SelectedTypeIndex}" HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="ComplÃ¨te (Full)"/>
                                    <ComboBoxItem Content="DiffÃ©rentielle (Differential)"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <CheckBox IsChecked="True" Content="Activer le chiffrement (CryptoSoft)"/>
                                <TextBlock Text="Les fichiers seront chiffrÃ©s avant copie" FontSize="11" Foreground="#666" Margin="30,0,0,0"/>
                            </StackPanel>
                        </Grid>

                        <Button Command="{Binding CreateJobCommand}" Background="#00bcd4" Foreground="Black" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="âœ“"/>
                                <TextBlock Text="CONFIRMER ET CRÃ‰ER"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="âš™ï¸"/>
                    <TextBlock Text="ParamÃ¨tres"/>
                </StackPanel>
            </TabItem.Header>
            <Grid Margin="30" RowDefinitions="Auto, *">
                <TextBlock Text="Configuration" FontSize="28" FontWeight="Light" Margin="0,0,0,25"/>

                <StackPanel Grid.Row="1" Spacing="20">
                    <Border Background="#252525" CornerRadius="8" Padding="20">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel>
                                <TextBlock Text="Langue de l'interface" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="Choisissez la langue d'affichage du logiciel." Foreground="#888" FontSize="12"/>
                            </StackPanel>
                            <ComboBox Grid.Column="1" SelectedIndex="0" Width="200" VerticalAlignment="Center">
                                <ComboBoxItem Content="ðŸ‡«ðŸ‡· FranÃ§ais"/>
                                <ComboBoxItem Content="ðŸ‡¬ðŸ‡§ English"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </TabItem>

    </TabControl>
</Window>