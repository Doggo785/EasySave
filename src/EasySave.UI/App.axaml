<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="EasySave.UI.App"
             RequestedThemeVariant="Dark"> <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackground">#F5F5F5</SolidColorBrush>
                    <SolidColorBrush x:Key="CardBackground">#FFFFFF</SolidColorBrush>
                    <SolidColorBrush x:Key="TextPrimary">#111111</SolidColorBrush>
                    <SolidColorBrush x:Key="TextSecondary">#666666</SolidColorBrush>
                    <SolidColorBrush x:Key="BorderColor">#DDDDDD</SolidColorBrush>
                </ResourceDictionary>
                
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppBackground">#1A1A1A</SolidColorBrush>
                    <SolidColorBrush x:Key="CardBackground">#252525</SolidColorBrush>
                    <SolidColorBrush x:Key="TextPrimary">#FFFFFF</SolidColorBrush>
                    <SolidColorBrush x:Key="TextSecondary">#888888</SolidColorBrush>
                    <SolidColorBrush x:Key="BorderColor">#333333</SolidColorBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>