{
  "metadata": [
    {
      "src": [
        {
          "src": ".",
          "files": [
            "src/**/*.csproj"
          ],
          "exclude": [
            "src/**/obj/**",
            "src/**/bin/**"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "docs/**.md",
          "docs/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/**/*.png",
          "docs/**/*.pdf",
          "src/EasySave.UI/assets/LogoApp.png"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "EasySave Documentation",
      "_appFooter": "EasySave - Enterprise Backup Solution",
      "_enableSearch": true,
      "_appLogoPath": "src/EasySave.UI/assets/LogoApp.png"
    },
    "template": [
      "default",
      "modern"
    ]
  }
}