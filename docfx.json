{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ],
          "src": "."
        }
      ],
      "dest": "api",
      "disableGitFeatures": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "docs/**.md",
          "index.md",
          "toc.yml",
          "docs/toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/**/*.png",
          "src/EasySave.UI/assets/LogoApp.ico"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appTitle": "Documentation EasySave",
      "_enableSearch": true
    }
  }
}